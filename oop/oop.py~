class animal: 
	def __init__(self,name,age,color,size):
		self.name=name
		self.age=age
		self.color=color
		self.size=size
	
	def print_all(self):
		print(self.name)
		print(self.age)
		print(self.color)
		print(self.size)
	def eat(self,food):
		print("the animal",self.name,"eats",food)
	def sleep(self,hours,dream):
		print("the animal", self.name, "sleeps for", hours,"hours a day and dreams about",dream)

dog=animal("sadek",22,"yellow","tiny")
lion=animal("nofar",17,"orange","big")

dog.print_all()
dog.eat("pizza")
dog.sleep(12,"pizza")
